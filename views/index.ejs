<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Food Portal</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-50">
    <nav class="bg-white shadow p-4 flex justify-between">
        <a href="/" class="text-2xl text-red-500 font-bold">Food Portal</a>
        <a href="/admin" class="text-gray-700">Admin</a>
    </nav>

    <section class="p-10 grid grid-cols-1 md:grid-cols-3 gap-6">
        <% foods.forEach(food=> { %>
            <div class="bg-white p-4 rounded shadow">
                <img src="/images/<%= food.image_url %>" class="w-full h-40 object-cover rounded mb-3" />
                <h2 class="text-xl font-bold">
                    <%= food.name %>
                </h2>
                <p class="text-gray-700">$<%= Number(food.price).toFixed(2) %>

                </p>
                <a href="/food/<%= food.id %>" class="inline-block mt-2 px-3 py-1 bg-red-500 text-white rounded">View
                    Details</a>
            </div>
            <% }) %>
    </section>
</body>

</html>